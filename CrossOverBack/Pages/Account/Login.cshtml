@page
@model Login

@{
    Layout = "_AuthLayout";
}

<div class="card Form">
    <div class="card-body">
        <form method="post" class="col-sm-12">
            <div class="form-group row">
                <label class="col-md-4 col-form-label text-md-right">Логин</label>
                <div class="col-md-6">
                    <input asp-for="LoginData" type="text" class="form-control Form-Input" required autofocus>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-4 col-form-label text-md-right">Пароль</label>
                <div class="col-md-6">
                    <input asp-for="Password" type="password"  class="form-control Form-Input" required>
                </div>
            </div>

            <div class="form-group row">
                <label class="col-md-4 col-form-label text-md-right"></label>
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary Form-Input">
                        Войти
                    </button>
                </div>
            </div>

        </form>
        <label style="color: red">@Model.Error</label>
    </div>
</div>