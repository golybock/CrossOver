@page
@model CrossOverBack.Pages.WindowRequests.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить эту запись?</h3>
<div>
    <h4>Запрос на расчет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Date)
        </dd>
        <dt class="col-sm-2">
            Город
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.City)
        </dd>
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Name)
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Phone)
        </dd>
        <dt class="col-sm-2">
            Почта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Email)
        </dd>
        <dt class="col-sm-2">
            Описание
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Description)
        </dd>
        <dt class="col-sm-2">
            Окно
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Window.Info)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="WindowRequest.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад к списку</a>
    </form>
</div>
