@page
@model CrossOverBack.Pages.WindowRequests.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Детали</h1>

<div>
    <h4>Запрос на расчет</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Дата
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Date)
        </dd>
        <dt class="col-sm-2">
            Город
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.City)
        </dd>
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Name)
        </dd>
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Phone)
        </dd>
        <dt class="col-sm-2">
            Почта
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Email)
        </dd>
        <dt class="col-sm-2">
            Описнаие
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Description)
        </dd>
        <dt class="col-sm-2">
            Окно
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.WindowRequest.Window.Info)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Index">Назад к списку</a>
</div>
