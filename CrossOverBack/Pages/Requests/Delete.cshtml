@page
@model CrossOverBack.Pages.Requests.DeleteModel

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Удаление</h1>

<h3>Вы уверены что хотите удалить запись?</h3>
<div>
    <h4>Запрос на звонок</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CallRequest.Phone)
        </dd>
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CallRequest.Name)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="CallRequest.Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-page="./Index">Назад к списку</a>
    </form>
</div>
