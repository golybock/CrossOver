@page
@model CrossOverBack.Pages.Requests.DetailsModel

@{
    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Информация</h1>

<div>
    <h4>Запрос на звонок</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Телефон
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CallRequest.Phone)
        </dd>
        <dt class="col-sm-2">
            Имя
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CallRequest.Name)
        </dd>
    </dl>
</div>
